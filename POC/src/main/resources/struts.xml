<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<constant name="struts.objectFactory"
		value="org.apache.struts2.spring.StrutsSpringObjectFactory" />

	<package name="default" extends="struts-default" namespace="/">

	<action name="manageRateAction" method="execute" class="manageRateAction">
		<result name="success" type="redirect">RateList.jsp</result>
	</action>

	<action name="addTransportationRates" method="add"
		class="manageTransportationRateAction">
		<result name="success" type="redirect">getTransportationRateList</result>
	</action>

	<action name="getTransportationRateList" method="list"
		class="manageTransportationRateAction">
		<result name="success">/TransportationRateList.jsp</result>
	</action>

	<action name="getSourceIdList" method="sourceIdList"
		class="manageTransportationRateAction">
		<result name="success">/TransportationrateViewEdit.jsp</result>
	</action>

	<action name="getDestinationIdList" method="destinationIdList" class="manageTransportationRateAction">
		<result name="success">/TransportationrateViewEdit.jsp</result>
	</action>

	<action name="getClientIdList" method="clientIdList"	class="manageTransportationRateAction">
		<result name="success">/TransportationrateViewEdit.jsp</result>
	</action>

	<action name="getVehicleTypeIdList" method="vehicleTypeIdList"
		class="manageTransportationRateAction">
		<result name="success">/TransportationrateViewEdit.jsp</result>
	</action>


	<action name="editTransportationRate" method="edit" class="manageTransportationRateAction">
		<result name="success">/TransportationrateViewEdit.jsp</result>
	</action>

	<action name="deleteTransportationRate" method="delete" class="manageTransportationRateAction">
		<result name="success" type="redirect">getTransportationRateList</result>
	</action>


	<!-- Destinations begin -->
	
	<action name="*Destination" method="{1}" class="manageDestinationAction">
		<result name="input">/DestinationViewEdit.jsp</result>
		<result name="success">/DestinationList.jsp</result>
	</action>
	
	<!-- Destinations end -->
	
	
	<action name="addVehicleType" method="add" class="manageVehicleTypeAction">
		<result name="success" type="redirect">getVehicleTypeList</result>
	</action>
	
	
	<action name="getVehicleTypeList" method="list" class="manageVehicleTypeAction">
		<result name="success">/VehicleTypeList.jsp</result>
	</action>
		<action name="editVehicleType" method="edit" class="manageVehicleTypeAction">
		<result name="success">/VehicleTypeViewEdit.jsp</result>
	</action>

	<action name="deleteVehicleType" method="delete" class="manageVehicleTypeAction">
		<result name="success" type="redirect">getVehicleTypeList</result>
	</action>

	</package>
</struts>